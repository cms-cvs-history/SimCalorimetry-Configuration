
  # unsuppressed digis simulation - fast preshower
  include "SimCalorimetry/EcalSimProducers/data/ecaldigi.cfi"
  replace simEcalUnsuppressedDigis.doFast = true

  # ECAL Trigger Primitives (needed by SRP)
  include "SimCalorimetry/EcalTrigPrimProducers/data/ecalTriggerPrimitiveDigis.cff"

  # Selective Readout Processor producer
  include "SimCalorimetry/EcalSelectiveReadoutProducers/data/ecalDigis.cfi"

  # Preshower Zero suppression producer
  include "SimCalorimetry/EcalZeroSuppressionProducers/data/ecalPreshowerDigis.cfi"
  replace simEcalPreshowerDigis.ESNoiseSigma = 2.98595 

  sequence ecalDigiSequence = { simEcalUnsuppressedDigis, simEcalTriggerPrimitiveDigis, simEcalDigis, simEcalPreshowerDigis }


